<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="20dp"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:text="Addition"
        android:textSize="30sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/num_show1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_below="@id/show"
        android:layout_marginTop="20dp"
        android:text="Number One"
        android:textSize="20sp"
        android:layout_marginRight="70dp" />

    <EditText
        android:id="@+id/editTextNumber1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/num_show1"
        android:layout_below="@id/show"
        android:inputType="numberDecimal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="70dp"
        android:layout_toRightOf="@id/num_show1" />

    <TextView
        android:id="@+id/num_show2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/num_show1"
        android:layout_marginRight="70dp"
        android:layout_marginTop="30dp"
        android:text="Number Two"
        android:textSize="20sp"
        android:layout_marginEnd="70dp" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNumber1"
        android:layout_toEndOf="@id/num_show2"
        android:layout_marginTop="15dp"
        android:layout_marginRight="70dp"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@id/num_show2"
        android:layout_marginEnd="70dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNumber2"
        android:layout_marginRight="50dp"
        android:layout_marginTop="16dp"
        android:text="Add"
        android:layout_marginEnd="50dp" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNumber2"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="20sp"
        android:layout_toRightOf="@id/addButton"
        android:layout_toEndOf="@id/addButton" />
</RelativeLayout>
